<style>
  .hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    padding: 2rem 0;
    position: relative;
    overflow: hidden;
  }

  .content {
    max-width: 800px;
    position: relative;
    z-index: 2;
  }

  .greeting {
    color: var(--primary-color);
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    display: block;
  }

  h1 {
    font-size: 4.5rem;
    margin: 0;
    background: linear-gradient(
      83.21deg,
      var(--primary-color) 0%,
      var(--secondary-color) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }

  .wave {
    display: inline-block;
    animation: wave 2.5s infinite;
    transform-origin: 70% 70%;
  }

  h2 {
    font-size: 2.5rem;
    margin: 1rem 0;
    color: var(--text-secondary);
    position: relative;
    width: fit-content;
  }

  .typewriter::after {
    content: '|';
    animation: blink 1s step-end infinite;
  }

  p {
    font-size: 1.25rem;
    line-height: 1.8;
    margin: 1.5rem 0;
    color: var(--text-secondary);
    max-width: 600px;
  }

  .highlight {
    color: var(--primary-color);
    font-weight: 500;
  }

  .cta {
    display: flex;
    gap: 1.5rem;
    margin-top: 2.5rem;
  }

  .primary-button,
  .secondary-button {
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .primary-button {
    background: linear-gradient(
      83.21deg,
      var(--primary-color) 0%,
      var(--secondary-color) 100%
    );
    color: white;
    box-shadow: 0 4px 15px rgba(167, 139, 250, 0.3);
  }

  .primary-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(167, 139, 250, 0.4);
  }

  .button-icon {
    transition: transform 0.3s ease;
  }

  .primary-button:hover .button-icon {
    transform: translateX(4px);
  }

  .secondary-button {
    border: 2px solid var(--primary-color);
    color: var(--primary-color);
    background: transparent;
  }

  .secondary-button:hover {
    background: rgba(167, 139, 250, 0.1);
    transform: translateY(-2px);
  }

  .background-gradient {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 80%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(167, 139, 250, 0.1) 0%,
      rgba(139, 92, 246, 0.05) 25%,
      transparent 50%
    );
    z-index: 1;
    animation: pulse 8s ease-in-out infinite;
  }

  @keyframes wave {
    0%,
    100% {
      transform: rotate(0deg);
    }
    25% {
      transform: rotate(-10deg);
    }
    75% {
      transform: rotate(10deg);
    }
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.15;
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.8s ease-out forwards;
    animation-delay: 0.3s;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 3rem;
    }

    h2 {
      font-size: 2rem;
    }

    .cta {
      flex-direction: column;
    }

    .primary-button,
    .secondary-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
