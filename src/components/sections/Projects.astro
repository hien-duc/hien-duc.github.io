  {
    title: "Chinese Chess",
    description: "Modern Chinese Chess Platform with real-time multiplayer gameplay",
    tech: ["Next.js 15", "TypeScript", "MongoDB"],
    link: "https://github.com/hien-duc/xiangqi-chinese-chess-online-platform",
    icon: "ðŸŽ®"
  },
  {
    title: "Lumine Library Management",
    description: "Library management system using Spring Boot microservices",
    tech: ["Spring Boot", "React", "TypeScript"],
    link: "https://github.com/hien-duc/lumine-library-management-system",
    icon: "ðŸ“š"
  },
  {
    title: "SpendWise",
    description: "Mobile financial tracker using React Native and Supabase",
    tech: ["React Native", "Supabase", "TypeScript"],
    link: "https://github.com/hien-duc/spendwise-mobile-financial-tracker",
    icon: "ðŸ’°"
  }
];
---

<section id="projects" class="projects">
  <div class="section-header animate-fade-in">
    <h2 class="section-title">Featured Projects</h2>
    <p class="section-subtitle">Some of my recent work</p>
  </div>
  
  <div class="projects-grid">
    {projects.map((project, index) => (
      <a 
        href={project.link} 
        class="project-card animate-slide-up" 
        target="_blank" 
        rel="noopener"
        style={`animation-delay: ${index * 0.2}s`}
      >
        <div class="card-content">
          <div class="project-icon">{project.icon}</div>
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div class="tech-stack">
            {project.tech.map(tech => <span class="tech-tag">{tech}</span>)}
          </div>
        </div>
      </a>
    ))}
  </div>
  
  <div class="background-shapes">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
  </div>
</section>

<style>
  .projects {
    padding: 6rem 0;
    position: relative;
    overflow: hidden;
  }
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(83.21deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
    display: inline-block;
  }
  .section-subtitle {
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
    z-index: 2;
  }
  .project-card {
    background: var(--card-bg);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    position: relative;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .project-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 0 8px rgba(167, 139, 250, 0.3));
  }
  .card-content {
    padding: 2rem;
    position: relative;
    z-index: 1;
  }
  .card-content h3 {
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
  }
  .card-content p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  .arrow {
    color: white;
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }
  .project-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  }
  .project-card:hover .card-overlay {
    opacity: 1;
  }
  .project-card:hover .overlay-content {
    transform: translateY(0);
  }
  .project-card:hover .arrow {
    transform: translateX(6px);
  }
  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .tech-tag {
    background: rgba(167, 139, 250, 0.1);
    color: var(--primary-color);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid rgba(167, 139, 250, 0.2);
    transition: all 0.3s ease;
  }
  .tech-tag:hover {
    background: rgba(167, 139, 250, 0.2);
    transform: translateY(-2px);
  }
  .background-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
  }
  .shape {
    position: absolute;
    background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
    border-radius: 50%;
    opacity: 0.1;
  }
  .shape-1 {
    width: 400px;
    height: 400px;
    top: -200px;
    right: -200px;
    animation: float 8s ease-in-out infinite;
  }
  .shape-2 {
    width: 300px;
    height: 300px;
    bottom: -150px;
    left: -150px;
    animation: float 10s ease-in-out infinite reverse;
  }
  @keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(30px, -30px) rotate(180deg); }
  }
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
    .section-title {
      font-size: 2rem;
    }
    .project-card {
      margin: 0 1rem;
    }
  }
</style>