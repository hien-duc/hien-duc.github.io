---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/hien-duc',
    icon: `<svg viewBox="0 0 24 24" width="24" height="24">
            <path fill="currentColor" d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
          </svg>`
  },
];
---

<footer>
  <div class="footer-content">
    <div class="footer-main">
      <div class="footer-text animate-fade-in">
        <p class="copyright">&copy; {currentYear} Duc Tran</p>
        <p class="tagline">Building the future, one line of code at a time</p>
      </div>
      
      <div class="social-links">
        {socialLinks.map((link, index) => (
          <a 
            href={link.url} 
            target="_blank" 
            rel="noopener" 
            aria-label={link.name}
            class="social-link animate-slide-up"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <Fragment set:html={link.icon} />
          </a>
        ))}
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>Made with ❤️ using Astro</p>
    </div>
  </div>
  
  <div class="footer-gradient"></div>
</footer>

<style>
  footer {
    background: rgba(36, 40, 59, 0.98);
    backdrop-filter: blur(12px);
    padding: 3rem 0 2rem;
    position: relative;
    overflow: hidden;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 2;
  }

  .footer-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .footer-text {
    color: var(--text-secondary);
  }

  .copyright {
    font-size: 1.1rem;
    margin: 0;
    color: var(--text-primary);
  }

  .tagline {
    margin: 0.5rem 0 0;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
  }

  .social-link {
    color: var(--text-secondary);
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .social-link:hover {
    color: var(--primary-color);
    transform: translateY(-3px);
    background: rgba(167, 139, 250, 0.1);
    border-color: rgba(167, 139, 250, 0.3);
  }

  .footer-bottom {
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.9rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom p {
    margin: 0;
    opacity: 0.8;
  }

  .footer-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: linear-gradient(
      to top,
      rgba(167, 139, 250, 0.05),
      transparent
    );
    pointer-events: none;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.8s ease-out forwards;
  }

  @media (max-width: 768px) {
    .footer-main {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>